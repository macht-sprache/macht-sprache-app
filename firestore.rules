rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isCreator() {
      return request.auth.uid == request.data.creatorId;
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /terms/{term} {
      allow read: if true;
    }

    match /translations/{translation} {
      allow read: if true;
    }

    match /translationExamples/{translationExample} {
      allow read: if true;
    }

    function isValidComment() {
      let data = request.resource.data;
      return data.creatorId is string &&
        data.ref is path &&
        data.createdAt is timestamp &&
        data.comment is string;
    }

    match /comments/{comment} {
      allow read: if true;
      allow create: if isCreator() && isValidComment();
    }
  }
}
