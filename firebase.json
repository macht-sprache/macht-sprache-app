{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "build",
        "ignore": ["**/static/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, public"
                    }
                ]
            }
        ],
        "redirects": [
            {
                "source": "/extension",
                "destination": "https://chrome.google.com/webstore/detail/machtsprache-for-sensitiv/dichlnekfmanlagciihdnkgiefppilol/",
                "type": 302
            }
        ]
    },
    "emulators": {
        "auth": {
            "port": 9099,
            "host": "0.0.0.0"
        },
        "firestore": {
            "port": 9100,
            "host": "0.0.0.0"
        },
        "ui": {
            "port": 9101
        },
        "functions": {
            "port": 5001
        }
    },
    "functions": {
        "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
        "source": "functions"
    }
}
